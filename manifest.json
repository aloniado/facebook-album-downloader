{
  "manifest_version": 2,
  "name": "Facebook Album downloader",
  "version": "1.0",
  "description": "Download a facebook album with a click",
  "icons": {
    "128": "facebook-album-downloader.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.facebook.com/*"
      ],
      "js": [
        "script.js"
      ],
      "css": ["style.css"]
    }
  ],
  "permissions": [
    "downloads"
    ]
}